#!/bin/sh
set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop the service before removal/upgrade
        if [ -d /run/systemd/system ]; then
            systemctl stop athena-dhcpd.service || true
        fi
        ;;

    failed-upgrade)
        ;;

    *)
        echo "prerm called with unknown argument: $1" >&2
        exit 1
        ;;
esac

exit 0
